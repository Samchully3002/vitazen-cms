extends ../layout

block content
    .row
        .col-md-4.stretch-card.grid-margin
            .card.bg-gradient-purple.card-img-holder.text-white
                .card-body
                    img.card-img-absolute(src='public/assets/images/dashboard/circle.svg' alt='circle-image')
                    h4.font-weight-normal.mb-3
                        | Total Products
                        i.mdi.mdi-package-variant-closed.mdi-48px.float-right
                    h2.mb-5  #{products ? products.totalProducts : '0'}
                    h6.card-text Products with Discounts #{products ? products.productsWithDiscount : '0'}
                    h6.card-text Products without Discounts #{products ? products.productsWithoutDiscount : '0'}
        .col-md-4.stretch-card.grid-margin
            .card.bg-gradient-purple.card-img-holder.text-white
                .card-body
                    img.card-img-absolute(src='public/assets/images/dashboard/circle.svg' alt='circle-image')
                    h4.font-weight-normal.mb-3
                        | Active Promotions 
                        i.mdi.mdi-wallet-giftcard.mdi-48px.float-right
                    h2.mb-5 #{promo ? promo.totalPromotions : '0'}
                    h6.card-text Hero Slider #{promo ? promo.totalHeroSlider : '0'}
                    h6.card-text Banner Promo #{promo ? promo.totalPromoBanner : '0'}
        .col-md-4.stretch-card.grid-margin
            .card.bg-gradient-purple.card-img-holder.text-white
                .card-body
                    img.card-img-absolute(src='public/assets/images/dashboard/circle.svg' alt='circle-image')
                    h4.font-weight-normal.mb-3
                        | Reviews & Advertisements
                        i.mdi.mdi-diamond.mdi-48px.float-right
                    h2.mb-5 #{review ? review.totalReview : '0'}
                    h6.card-text Videos #{review ? review.totalVideo : '0'}
                    h6.card-text Shopee #{review ? review.totalShopee : '0'}
                    h6.card-text Websites #{review ? review.totalWeb : '0'}
