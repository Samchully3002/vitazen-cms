extends ../layout

block content
    .row
        .col-md-4.stretch-card.grid-margin
            .card.bg-gradient-danger.card-img-holder.text-white
                .card-body
                    img.card-img-absolute(src='public/assets/images/dashboard/circle.svg' alt='circle-image')
                    h4.font-weight-normal.mb-3
                        | Weekly Sales 
                        i.mdi.mdi-chart-line.mdi-24px.float-right
                    h2.mb-5 $ 15,0000
                    h6.card-text Increased by 60%
        .col-md-4.stretch-card.grid-margin
            .card.bg-gradient-info.card-img-holder.text-white
                .card-body
                    img.card-img-absolute(src='public/assets/images/dashboard/circle.svg' alt='circle-image')
                    h4.font-weight-normal.mb-3
                        | Weekly Orders 
                        i.mdi.mdi-bookmark-outline.mdi-24px.float-right
                    h2.mb-5 45,6334
                    h6.card-text Decreased by 10%
        .col-md-4.stretch-card.grid-margin
            .card.bg-gradient-success.card-img-holder.text-white
                .card-body
                    img.card-img-absolute(src='public/assets/images/dashboard/circle.svg' alt='circle-image')
                    h4.font-weight-normal.mb-3
                        | Visitors Online 
                        i.mdi.mdi-diamond.mdi-24px.float-right
                    h2.mb-5 95,5741
                    h6.card-text Increased by 5%
    .row
        .col-md-7.grid-margin.stretch-card
            .card
                .card-body
                    .clearfix
                        h4.card-title.float-left Visit And Sales Statistics
                        #visit-sale-chart-legend.rounded-legend.legend-horizontal.legend-top-right.float-right
                        canvas#visit-sale-chart.mt-4
        .col-md-5.grid-margin.stretch-card
            .card
                .card-body
                    h4.card-title Traffic Sources
                    canvas#traffic-chart
                    #traffic-chart-legend.rounded-legend.legend-vertical.legend-bottom-left.pt-4